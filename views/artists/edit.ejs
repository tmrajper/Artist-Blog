<% include ../partials/header %>

<div class="container">
    
    <div class="row">

        <h1 style="text-align: center;">Edit <%= artist.name %></h1>
        
        <div style="width: 30%; margin: 25px auto;">
        
            <form action="/artists/<%=artist._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="artist[name]" value="<%= artist.name %>">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" name="artist[image]" value="<%= artist.image %>">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" name="artist[description]" value="<%= artist.description %>">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
                </div>
            </form>
            
            <a href="/artists">Back</a>
        </div>
    
    </div>

</div>

<% include ../partials/footer %>