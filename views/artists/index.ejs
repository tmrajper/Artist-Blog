<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Artist Blog!</h1>
            <p>
                <a class="btn-primary btn-lg" href="/artists/new">Add New Artist</a>
            </p>
        </div>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popluar Artists</h3>
        </div>
    </div>
    
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% artists.forEach(function(artist) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= artist.image %>" >
                    <div class="caption">
                        <h4> <%= artist.name %> </h4>
                    </div>
                    <p>
                        <a href="/artists/<%= artist._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }) %>
    </div>
    
</div>

<% include ../partials/footer %>